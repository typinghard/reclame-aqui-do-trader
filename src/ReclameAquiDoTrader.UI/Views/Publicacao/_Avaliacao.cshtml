@model ReclameAquiDoTrader.UI.ViewModels.PublicacaoViewModel.TextoAvaliacaoViewModel

<div style="position:relative; left: 0; top: 0; margin:0 auto; padding:0">
    <img class="w-100 position: relative;" src="@Model.ImagemFundo" style=" opacity: 99%;">
    <img src="@Model.ImgPolegar" style=" position:absolute;top:-5%;right:10%;width:30%;">
    <img src="@Model.ImgLogoTransparente" style="position: absolute;top: -12%;left: 7%;width: 45%;">
    <span style=" position:absolute;left:8%;top:23%;text-align:justify;color:#ffffff;font-weight:bold;background-color:#060606000;width:84%;font-size:1.35em;">
        @Model.Texto
    </span>
    <span style=" position:absolute;left:48%;bottom:2%;color:#ffffff;font-weight:bold;font-size:1.35em;">
        @Model.PaginaAtual/@Model.PaginaFinal
    </span>
</div>